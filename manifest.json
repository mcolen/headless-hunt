{
  "manifest_version": 2,
  "name": "Headless Hunt",
  "version": "0.1",

  "description": "Removes the annoying header from https://www.nytimes.com/crosswords.",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "page_action": {
    "default_title": "Behead this page!",
    "default_popup": "behead.html",
    "default_icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+H"
      }
    }
  },
  "content_scripts": [
    {
      "matches": ["*://www.nytimes.com/crosswords*"],
      "css": ["legacy.css"],
      "js": ["legacy.js"]
    },
    {
      "matches": ["*://www.nytimes.com/puzzles*"],
      "css": ["legacy.css"],
      "js": ["legacy.js"]
    }
  ],
  "permissions": ["activeTab", "declarativeContent"]
}
