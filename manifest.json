{
  "manifest_version": 2,
  "name": "Headless Hunt",
  "version": "0.1",

  "description": "Removes the annoying header from https://www.nytimes.com/crosswords.",

  "page_action": {
    "default_title": "Toggle Header",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["activeTab", "declarativeContent"]
}
