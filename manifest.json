{
  "manifest_version": 3,
  "name": "Headless Hunt",
  "version": "1.0",
  "description": "Toggle header visibility on NY Times crosswords and puzzles.",
  
  "icons": {
    "16": "images/icon16.png",
    "24": "images/icon24.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "action": {
    "default_title": "Toggle header visibility",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    }
  },

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+H",
        "mac": "Alt+Shift+H"
      },
      "description": "Toggle NY Times header visibility"
    }
  },

  "permissions": ["activeTab", "scripting"],

  "host_permissions": [
    "*://www.nytimes.com/crosswords/*",
    "*://www.nytimes.com/puzzles/*"
  ]
}
